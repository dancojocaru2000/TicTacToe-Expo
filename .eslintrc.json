{
	"env": {
		"es6": true
	},
	"extends": [
		"airbnb",
		"plugin:@typescript-eslint/eslint-recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:import/errors",
		"plugin:react/recommended",
		"plugin:react-native/all",
		"plugin:prettier/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"plugins": [
		"import",
		"jsx-a11y",
		"prettier",
		"react",
		"react-native",
		"react-hooks"
	],
	"rules": {
		"strict": [
			0,
			"global"
		],
		"no-console": "off",
		"no-use-before-define": "off",
		"func-names": [
			2,
			"never"
		],
		"global-require": 0,
		"func-style": [
			2,
			"expression",
			{
				"allowArrowFunctions": true
			}
		],
		"import/extensions": [
			0, 
			"never"
		],
		"import/order": [
			2,
			{
				"groups": [
					[
						"external"
					],
					[
						"builtin"
					],
					[
						"internal"
					],
					[
						"parent"
					],
					[
						"sibling",
						"index"
					]
				],
				"newlines-between": "always-and-inside-groups",
				"alphabetize": {
					"order": "asc",
					"caseInsensitive": true
				},
				"pathGroups": [
					{
						"pattern": "react-native",
						"group": "external",
						"position": "before"
					},
					{
						"pattern": "react",
						"group": "external",
						"position": "before"
					},
					{
						"pattern": "api",
						"group": "internal"
					},
					{
						"pattern": "app",
						"group": "internal"
					},
					{
						"pattern": "assets",
						"group": "internal"
					},
					{
						"pattern": "components",
						"group": "internal"
					},
					{
						"pattern": "constants/**",
						"group": "builtin"
					},
					{
						"pattern": "hocs",
						"group": "internal"
					},
					{
						"pattern": "locales",
						"group": "internal"
					},
					{
						"pattern": "navigator",
						"group": "internal"
					},
					{
						"pattern": "routes",
						"group": "internal"
					},
					{
						"pattern": "store",
						"group": "internal"
					},
					{
						"pattern": "styles",
						"group": "internal"
					},
					{
						"pattern": "test-ids",
						"group": "internal"
					},
					{
						"pattern": "utils",
						"group": "internal"
					}
				],
				"pathGroupsExcludedImportTypes": [
					"builtin"
				]
			}
		],
		"import/no-unresolved": [
			2,
			{
				"ignore": [
					".png$",
					".jpg$"
				]
			}
		],
		"no-undef": "error",
		"sort-keys": [
			2,
			"asc",
			{
				"caseSensitive": true,
				"natural": true,
				"minKeys": 2
			}
		],
		"sort-vars": [
			2,
			{
				"ignoreCase": true
			}
		],
		// Prettier
		"prettier/prettier": "error",
		// Jsx / React
		"jsx-a11y/href-no-hash": 0,
		"jsx-a11y/anchor-is-valid": [
			1,
			{
				"aspects": [
					"invalidHref"
				]
			}
		],
		"react/jsx-filename-extension": [
			1,
			{
				"extensions": [
					".js",
					".tsx"
				]
			}
		],
		"react/prefer-stateless-function": [
			0,
			{
				"ignorePureComponents": true
			}
		],
		"react/prop-types": 0,
		"react/no-unused-prop-types": 0,
		"react/sort-comp": [
			2,
			{
				"order": [
					"static-methods",
					"lifecycle",
					"everything-else",
					"render"
				]
			}
		],
		"react/static-property-placement": [
			2,
			"static public field",
			{
				"defaultProps": "static public field"
			}
		],
		"react-hooks/rules-of-hooks": "error",
		"react-hooks/exhaustive-deps": "warn",
		"import/no-extraneous-dependencies": [
			"error",
			{
				"devDependencies": true
			}
		]
	},
	"settings": {
		"import/resolver": {
			"babel-module": {},
			"node": {
				"extensions": [
					".js",
					".android.js",
					".ios.js",
					".native.js",
					".jsx",
					".ts",
					".android.ts",
					".ios.ts",
					".native.ts",
					".tsx"
				]
			}
		}
	}
}